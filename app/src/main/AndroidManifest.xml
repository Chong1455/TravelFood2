<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.utar.travelfood">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Travel Food"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.loginRegister.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".view.loginRegister.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".adapter.RecyclerViewHome1Adapter"
            android:exported="false" />
        <activity
            android:name=".model.Countries"
            android:exported="false" />
        <activity
            android:name=".adapter.ViewPagerCountryAdapter"
            android:exported="false" />
        <activity
            android:name=".view.country.CountryActivity"
            android:exported="false" />
        <activity
            android:name=".view.home.HomeActivity"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".view.category.CategoryActivity"
            android:label="Category"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.detail.DetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>